<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context="il.ac.tau.cloudweb17a.hasorkim.WhoWeAreActivity">

    <ImageView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        app:srcCompat="@drawable/hasorkim_instructions"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="16dp"
        android:contentDescription="@string/organization_description" />

    <TextView
        android:id="@+id/go_to_website"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/to_organization_website"
        android:textSize="20sp" />

</LinearLayout>