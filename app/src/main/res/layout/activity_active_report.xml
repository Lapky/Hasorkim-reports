<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.ac.tau.cloudweb17a.hasorkim.ActiveReportActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="37 :Report number"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/standard_padding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="4"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_margin="@dimen/standard_padding">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:src="@drawable/scaner_on_the_way_status" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=":Status"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold"
                android:layout_margin="@dimen/standard_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Street Sokolov 14, City Ramat-Gan"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=":Report location:"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="@dimen/standard_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold"
                android:layout_margin="@dimen/standard_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0544764751"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="@dimen/standard_text_size"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=":Phone number"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0sp"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold"
                android:layout_margin="@dimen/standard_padding">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:src="@drawable/dog1" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=":Image"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold"
                android:layout_margin="@dimen/standard_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dog looks a bit sick"
                    android:gravity="left"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=":More information"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical"
        android:textStyle="bold">



        <Button
            android:id="@+id/cancelReport"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:text="Cancel report"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/whatNowInfo"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="What now?"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>
</LinearLayout>
