<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="?android:attr/buttonBarStyle">

    <ImageView
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/full_logo"
        android:layout_height="155sp"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        tools:context="il.ac.tau.cloudweb17a.hasorkim.MapsActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@android:color/holo_red_dark"
        android:text="@string/button_report_event_new_report"
        android:textSize="@dimen/new_report_size"
        android:onClick="openNewReport"
        style="?android:attr/buttonBarButtonStyle"/>


</LinearLayout>
