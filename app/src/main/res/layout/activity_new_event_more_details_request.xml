<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportDetailsBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="il.ac.tau.cloudweb17a.hasorkim.NewEventMoreDetailsRequestActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="50sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/text_new_event_we_will_check_report"
        android:textAlignment="center"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/standard_padding">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold">

                <ImageButton
                    android:id="@+id/imageButtonReport"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="תמונה:"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold">

                <EditText
                    android:id="@+id/reporterName"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:paddingBottom="6sp"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/NewReportReporterName"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold">

                <EditText
                    android:id="@+id/reporterPhoneNumber"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="phone"
                    android:paddingBottom="6sp"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/addReportPhone"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/double_padding"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold">

                <EditText
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="false" />


                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/newReportAddInformation"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:textStyle="bold">

                <TextView
                    android:id="@+id/reportLocation"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/newReportMyLocation"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/text_new_event_have_dog_msg_please"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/standard_text_size"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submitReport"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="@string/button_new_event_more_details_submit"
        android:textSize="@dimen/button_text_size"
        android:layout_marginTop="@dimen/double_padding" />


</LinearLayout>
