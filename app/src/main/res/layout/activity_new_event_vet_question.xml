<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/standard_padding"
    android:paddingBottom="@dimen/standard_padding"


    tools:context="il.ac.tau.cloudweb17a.hasorkim.NewEventVetQuestionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:text="@string/text_new_event_vet_found"
        android:textStyle="bold"
        android:textSize="@dimen/standard_text_size"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="300sp"

        tools:context="il.ac.tau.cloudweb17a.hasorkim.MapsActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:text="@string/text_new_event_vet_question"
        android:textStyle="bold"
        android:textSize="@dimen/standard_text_size"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/standard_padding"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/button2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_new_event_see_vet_list"
            android:textSize="@dimen/button_text_size"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="openVetList"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_new_event_i_can_t"
            android:textSize="@dimen/button_text_size"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="openHaveDogMsg"

            />
    </LinearLayout>



</LinearLayout>
